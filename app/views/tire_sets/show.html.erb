<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to t('home.title'), root_path %></li>
    <li class="breadcrumb-item"><%= link_to t('tire_set.list.title'), tire_sets_path %></li>
    <li class="breadcrumb-item active"><%= @tire_set.display_name %></li>
  </ol>
</nav>

<%= render(TireSetComponent.new(tire_set: @tire_set, current_user:)) %>

<div>
  <p class="my-1">
    <%= link_to t('tire_set.link.back'), tire_sets_path %>
  </p>
  <% if policy(@tire_set).edit? %>
    <%= button_to t('tire_set.link.edit'), edit_tire_set_path(@tire_set), method: :get, class: 'btn btn-primary my-1' %>
  <% end %>
  <% if policy(@tire_set).destroy? %>
    <%= button_to t('tire_set.link.destroy'), @tire_set, method: :delete, class: 'btn btn-danger my-1' %>
  <% end %>
</div>
