<%= bootstrap_form_with(model: vehicle, data: { controller: 'vehicle--display-name' }) do |form| %>
  <%= form.file_field :photo %>
  <%= form.text_field :vin %>
  <%= form.text_field :model_year, data: {
    action: 'vehicle--display-name#update',
    'vehicle--display-name-target' => 'modelYear'
  } %>
  <%= form.text_field :make, data: {
    action: 'vehicle--display-name#update',
    'vehicle--display-name-target' => 'make'
  } %>
  <%= form.text_field :model, data: {
    action: 'vehicle--display-name#update',
    'vehicle--display-name-target' => 'model'
  } %>
  <%= form.text_field :user_display_name, placeholder: vehicle.generate_display_name, data: { 'vehicle--display-name-target' => 'displayName' } %>
  <%= form.text_field :breakin %>
  <%= form.text_field :miles_per_year %>
  <%= form.submit %>
<% end %>
