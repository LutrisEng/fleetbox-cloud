<div class="<%= class_names(:card, @classes) %>">
  <% if header %>
    <div class="card-header">
      <%= header %>
    </div>
  <% end %>
  <% if @image %>
    <%= image_tag @image, class: class_names('card-img-top' => !header), alt: @image_alt %>
  <% end %>
  <% if body %>
    <div class="card-body">
      <%= body %>
    </div>
  <% end %>
  <% if footer %>
    <div class="card-footer">
      <%= footer %>
    </div>
  <% end %>
</div>